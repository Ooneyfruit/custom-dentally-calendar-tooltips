{
  "manifest_version": 3,
  "name": "Custom Calendar Tooltips",
  "version": "1.3",
  "description": "Replaces truncated tooltips with custom tooltips on /calendar/day/â€¦ pages. Toggle with Alt+L by default.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation",
    "storage"
  ],
  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": false
  },
  "host_permissions": [
    "https://app.dentally.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://app.dentally.co/*"
      ],
      "js": [
        "utils.js"
      ]
    },
    {
      "matches": [
        "https://app.dentally.co/*"
      ],
      "js": [
        "state.js"
      ]
    },
    {
      "matches": [
        "https://app.dentally.co/*"
      ],
      "js": [
        "ui/toast.js"
      ]
    },
    {
      "matches": [
        "https://app.dentally.co/*"
      ],
      "js": [
        "ui/tooltip.js"
      ]
    },
    {
      "matches": [
        "https://app.dentally.co/*"
      ],
      "js": [
        "ui/toggleButton.js"
      ]
    },
    {
      "matches": [
        "https://app.dentally.co/*"
      ],
      "js": [
        "hotkey.js"
      ]
    },
    {
      "matches": [
        "https://app.dentally.co/*"
      ],
      "js": [
        "navigation.js"
      ]
    }
  ]
}